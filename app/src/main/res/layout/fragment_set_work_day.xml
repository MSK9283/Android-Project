<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    tools:context=".SetWorkDay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TimePicker
            android:id="@+id/ww_fromTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ww_label"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:timePickerMode="spinner" />

        <TextView
            android:id="@+id/ww_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TO" />

        <TimePicker
            android:id="@+id/ww_toTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ww_label"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:timePickerMode="spinner" />


        <Button
            android:id="@+id/ww_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ww_toTime"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:backgroundTint="#4EA1E3"
            android:text="CONFIRM" />

        <Button
            android:id="@+id/ww_cancel_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ww_toTime"
            android:layout_margin="16dp"
            android:layout_toLeftOf="@id/ww_confirm_button"
            android:backgroundTint="#4EA1E3"
            android:text="CANCEL" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

